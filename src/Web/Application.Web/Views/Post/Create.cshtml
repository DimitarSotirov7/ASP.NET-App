@using Application.Web.ViewModels.UserRelated
@model PostInputModel
@{
    this.ViewData["Title"] = "Create Post";
}
<h1 class="col-lg-6 offset-md-3 text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-lg-6 offset-md-3">
        <section>
            <form method="post" enctype="multipart/form-data">
                <hr />
                <div class="form-group">
                    <label asp-for="@Model.Content"></label>
                    <input asp-for="@Model.Content" class="form-control" />
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LocalImages"></label>
                    <input asp-for="@Model.LocalImages" class="form-control" />
                    <span asp-validation-for="@Model.LocalImages" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ImageUrl"></label>
                    <input asp-for="@Model.ImageUrl" class="form-control" />
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </section>
    </div>
</div>
