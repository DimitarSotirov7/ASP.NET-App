@using Application.Web.ViewModels.Account
@model ProfileViewModel

<div class="modal fade" id="modalId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Model.SetProfileImageMessage
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <form asp-controller="User" asp-action="ChangeProfileImage" method="post">
                    <input id="imageId" type="hidden" name="ImageId" />
                    <button type="submit" class="btn btn-success" asp-controller="User" asp-action="ChangeProfileImage">Yes</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
}